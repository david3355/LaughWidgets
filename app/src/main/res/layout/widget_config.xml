<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<ImageView
    android:id="@+id/img_chosen_image"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    android:src="@drawable/laugh_notif"/>

<TextView
    android:id="@+id/txt_widget_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="10dp"
    android:textColor="@color/colorSpringGreen"
    android:visibility="visible"/>

<TextView
    android:id="@+id/txt_chose_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Choose widget face:"
    android:layout_margin="20dp"
    android:visibility="gone"/>

<GridView
    android:id="@+id/grid_faces"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@drawable/widget_faces_background"
    android:scrollbars="vertical"
    android:columnWidth="200dp"
    android:verticalSpacing="24dp"
    android:numColumns="2"
    android:visibility="gone"
    android:stretchMode="spacingWidthUniform"/>

<TextView
    android:id="@+id/txt_select_config"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:textSize="16sp"
    android:layout_margin="10dp"
    android:text="@string/select_laughs"/>

<TextView
    android:id="@+id/txt_widget_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:textSize="12sp"
    android:text="@string/config_info"/>

<CheckBox
    android:id="@+id/check_all_laughs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:text="Select all"
    />

<ScrollView
    android:id="@+id/scroll_sounds"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="15dp"
    android:fadeScrollbars="false"
    android:scrollbarSize="10dp"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/panel_laughs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

</ScrollView>

<Button
    android:id="@+id/add_button"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/button_default"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:layout_marginTop="8dp"
    android:text="@string/add_widget"/>


</LinearLayout>